#:kivy 1.9
<Variable>:
	size_hint: 1,None
	size: sp(100),sp(30) # the x size is just a dummy
	Label:
		text: root.name
		
<AnalogVariable>:
	value_display: value_display
	Label:
		text: '[' + str(root.lower_limit) + ',' + str(root.upper_limit) + ']'
	FloatInput:
		id: value_display
		multiline: False
		on_focus: root.user_is_editing = self.focus
		on_text_validate: root.user_entered_value(self.text)
		disabled: root.channel_out == None
	Label:
		text: root.units
		
<DigitalVariable>:
	value_display: value_display
	SpinnerWithOnChoiceEvent:
		id: value_display
		text: root.options[0]
		values: root.options
		on_is_open: root.user_is_editing = self.is_open
		on_choice: root.user_entered_value(self.text)
		disabled: root.channel_out == None