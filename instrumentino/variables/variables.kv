#:kivy 1.9
<Variable>:
	size_hint: 1,None
	size: sp(100),sp(30) # the x size is just a dummy
	Label:
		text: root.name
		
<AnalogVariable>:
	value_display: value_display
	Label:
		text: '[' + str(root.lower_limit) + ',' + str(root.upper_limit) + ']'
	TextInput:
		id: value_display
		multiline: False
		on_text: if root.channel_out: root.write(root.channel_out.self.text)
	Label:
		text: root.units
		
<DigitalVariable>:
	value_display: value_display
	Spinner:
		id: value_display
		text: root.options[0]
		values: root.options
		on_text: if root.channel_out: root.write(root.channel_out.self.text)