#:kivy 1.9
<Variable_OLD>:
	size_hint: 1,None
	size: sp(100),sp(30) # the x size is just a dummy
	ListItemNormalLabel:
		text: root.name

		
<AnalogVariable_OLD>:
	value_display: value_display_widget
	ListItemNormalLabel:
		text: '[' + str(root.lower_limit) + ',' + str(root.upper_limit) + ']'
	FloatInput:
		id: value_display_widget
		multiline: False
		on_focus: root.user_is_editing = self.focus
		on_text_validate: root.user_entered_text(self.text)
		disabled: root.channel_out == None and root.channel_in != None
	ListItemNormalLabel:
		text: root.units


<AnalogVariableDurationInSeconds_OLD>:
	value_display: value_display_widget
	DurationInput:
		id: value_display_widget
		multiline: False
		on_focus: root.user_is_editing = self.focus
		on_text_validate: root.user_entered_text(self.text)
		disabled: root.channel_out == None and root.channel_in != None
		text: root.text
		last_text: root.text

		
<DigitalVariable_OLD>:
	value_display: value_display_widget
	SpinnerWithOnChoiceEvent:
		id: value_display_widget
		text: root.options[0]
		values: root.options
		on_is_open: root.user_is_editing = self.is_open
		on_choice: root.user_entered_text(args[1])
		disabled: root.channel_out == None and root.channel_in != None