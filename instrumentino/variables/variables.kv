#:kivy 1.9
<Variable>:
	size_hint: 1,None
	size: sp(100),sp(30) # the x size is just a dummy
	label_text: root.name
	Label:
		text: root.label_text
		
<AnalogVariable>:
	label_text: root.name + ' [' + str(root.lower_limit) + ',' + str(root.upper_limit) + '] ' + root.units
	TextInput:
		text: '???'
		multiline: False
		on_text: if root.channel_out: root.write(root.channel_out.self.text) 
		
<DigitalVariable>:
	Spinner:
		id: spinner
		text: root.options_dict.keys()[0]
		values: root.options_dict.keys()
		on_text: if root.channel_out: root.write(root.channel_out.self.text)